{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts"   // include tutti i file TypeScript nella cartella scripts e nelle sue sottocartelle
  ],
  "exclude": [
    "node_modules",  // esclude la cartella node_modules
    "**/*.spec.ts"   // esclude i file di test
  ]
}
